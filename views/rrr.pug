extends layout

block head
	link(rel='stylesheet' type='text/css' href='/rrr/style.css')

block body
	ul
		li
			a(href='/') Home
		li
			a(href='/flash/') Flash
		li
			a.active(href='/rrr') RRR

	h2#title Random Rectangle Renderer
	#content
		canvas#img_ref.hidden
		canvas#cnv
		br
		br

		each file in files
			a.img(href='#'+file) #{file}
			|  
			a(href=file)
				img(src='/img/dl.png' width='16px' height='16px')
			br

	script(type='text/javascript' src='/rrr/index.js')
